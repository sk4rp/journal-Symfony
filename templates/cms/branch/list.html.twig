{% extends 'cms/table.html.twig' %}

{% block table_name %}
    Branch
{% endblock %}

{% block table_create_btn %}
    <a class="btn-adm" href="{{ path('app_cms_branch_create') }}">Добавить</a>
{% endblock %}

{% block table_content %}
    <table class="table">
        <thead>
        <tr>
            <th>#</th>
            <th>Название</th>
            <th>Номер</th>
            <th>Заведующий отделением</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for branch in branches %}
            <tr>
                <td class="col-index">{{ loop.index }}</td>
                <td>{{ branch.name }}</td>
                <td>{{ branch.number }}</td>
                <td>{{ branch.supervisor }}</td>
                <td class="actions actions-one-line">
                    <a class="btn-adm"
                       href="{{ path('app_cms_branch_update', {branch: branch.id}) }}">Редактировать</a>
                    <a class="btn-adm"
                       href="{{ path('app_cms_branch_delete', {branch: branch.id}) }}">Удалить</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}