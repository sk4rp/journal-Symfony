{% extends 'cms/table.html.twig' %}

{% block table_name %}
    Participation Events
{% endblock %}

{% block table_create_btn %}
    <a class="btn-adm" href="{{ path('app_cms_event_participation_create') }}">Добавить</a>
{% endblock %}

{% block table_content %}
    <table class="table">
        <thead>
        <tr>
            <th>#</th>
            <th>Результат</th>
            <th>id_event</th>
            <th>id_student</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for eventParticipation in eventParticipations %}
            <tr>
                <td class="col-index">{{ loop.index }}</td>
                <td>{{ eventParticipation.result }}</td>
                <td>{{ eventParticipation.event.name }}</td>
                <td>{{ eventParticipation.student.fio }}</td>
                <td class="actions actions-one-line">
                    <a class="btn-adm"
                       href="{{ path('app_cms_event_participation_update', {eventParticipation: eventParticipation.id}) }}">Редактировать</a>
                    <a class="btn-adm"
                       href="{{ path('app_cms_event_participation_update', {eventParticipation: eventParticipation.id}) }}">Удалить</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}