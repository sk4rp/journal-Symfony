{% extends 'cms/table.html.twig' %}

{% block table_name %}
    Specialties
{% endblock %}

{% block table_create_btn %}
    <a class="btn-adm" href="{{ path('app_cms_specialty_create') }}">Добавить</a>
{% endblock %}

{% block table_content %}
    <table class="table">
        <thead>
        <tr>
            <th>#</th>
            <th>Название</th>
            <th>Код</th>
            <th>id_branch</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for specialty in specialties %}
            <tr>
                <td class="col-index">{{ loop.index }}</td>
                <td>{{ specialty.name }}</td>
                <td>{{ specialty.cipher }}</td>
                <td>{{ specialty.branch.name }}</td>
                <td class="actions actions-one-line">
                    <a class="btn-adm"
                       href="{{ path('app_cms_specialty_update', {specialty: specialty.id}) }}">Редактировать</a>
                    <a class="btn-adm"
                       href="{{ path('app_cms_specialty_delete', {specialty: specialty.id}) }}">Удалить</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}