{% extends 'cms/table.html.twig' %}

{% block table_name %}
    Groups
{% endblock %}

{% block table_create_btn %}
    <a class="btn-adm" href="{{ path('app_cms_group_create') }}">Добавить</a>
{% endblock %}

{% block table_content %}
    <table class="table">
        <thead>
        <tr>
            <th>#</th>
            <th>Название</th>
            <th>Год</th>
            <th>id_specialty</th>
            <th>id_instructor</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for group in groups %}
            <tr>
                <td class="col-index">{{ loop.index }}</td>
                <td>{{ group.name }}</td>
                <td>{{ group.year }}</td>
                <td>{{ group.specialty.cipher }} {{ group.specialty.name }}</td>
                <td>{{ group.instructor.fio }}</td>
                <td class="actions actions-one-line">
                    <a class="btn-adm"
                       href="{{ path('app_cms_group_update', {group: group.id}) }}">Редактировать</a>
                    <a class="btn-adm"
                       href="{{ path('app_cms_group_delete', {group: group.id}) }}">Удалить</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}