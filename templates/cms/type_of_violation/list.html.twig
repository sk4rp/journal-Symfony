{% extends 'cms/table.html.twig' %}

{% block table_name %}
    Typeofviolation
{% endblock %}

{% block table_create_btn %}
    <a class="btn-adm" href="{{ path('app_cms_type_of_violation_create') }}">Добавить</a>
{% endblock %}

{% block table_content %}
    <table class="table">
        <thead>
        <tr>
            <th>#</th>
            <th>Название</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for typeOfViolation in typesOfViolation %}
            <tr>
                <td class="col-index">{{ loop.index }}</td>
                <td>{{ typeOfViolation.name }}</td>
                <td class="actions actions-one-line">
                    <a class="btn-adm"
                       href="{{ path('app_cms_type_of_violation_update', {typeOfViolation: typeOfViolation.id}) }}">Редактировать</a>
                    <a class="btn-adm"
                       href="{{ path('app_cms_type_of_violation_delete', {typeOfViolation: typeOfViolation.id}) }}">Удалить</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}