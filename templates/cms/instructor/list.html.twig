{% extends 'cms/table.html.twig' %}

{% block table_name %}
    Instructor
{% endblock %}

{% block table_create_btn %}
    <a class="btn-adm" href="{{ path('app_cms_instructor_create') }}">Добавить</a>
{% endblock %}

{% block table_content %}
    <table class="table">
        <thead>
        <tr>
            <th>#</th>
            <th>Фамилия</th>
            <th>Имя</th>
            <th>Отчество</th>
            <th>Номер телефона</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for instructor in instructors %}
            <tr>
                <td class="col-index">{{ loop.index }}</td>
                <td>{{ instructor.surname }}</td>
                <td>{{ instructor.name }}</td>
                <td>{{ instructor.patronymic }}</td>
                <td>{{ instructor.phone }}</td>
                <td class="actions actions-one-line">
                    <a class="btn-adm"
                       href="{{ path('app_cms_instructor_update', {instructor: instructor.id}) }}">Редактировать</a>
                    <a class="btn-adm"
                       href="{{ path('app_cms_instructor_delete', {instructor: instructor.id}) }}">Удалить</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
