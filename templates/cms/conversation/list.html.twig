{% extends 'cms/table.html.twig' %}

{% block table_name %}
    Conversations
{% endblock %}

{% block table_create_btn %}
    <a class="btn-adm" href="{{ path('app_cms_conversation_create') }}">Добавить</a>
{% endblock %}

{% block table_content %}
    <table class="table">
        <thead>
        <tr>
            <th>#</th>
            <th>Дата</th>
            <th>Причина</th>
            <th>Примечание</th>
            <th>id_student</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for conversation in conversations %}
            <tr>
                <td class="col-index">{{ loop.index }}</td>
                <td class="col-date">{{ conversation.date|date('d.m.Y') }}</td>
                <td>{{ conversation.reason }}</td>
                <td>{{ conversation.note }}</td>
                <td>{{ conversation.student.fio }}</td>
                <td class="actions actions-one-line">
                    <a class="btn-adm"
                       href="{{ path('app_cms_conversation_update', {conversation: conversation.id}) }}">Редактировать</a>
                    <a class="btn-adm"
                       href="{{ path('app_cms_conversation_delete', {conversation: conversation.id}) }}">Удалить</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}