{% extends 'cms/table.html.twig' %}

{% block table_name %}
    Status
{% endblock %}

{% block table_create_btn %}
    <a class="btn-adm" href="{{ path('app_cms_status_create') }}">Добавить</a>
{% endblock %}

{% block table_content %}
    <table class="table">
        <thead>
        <tr>
            <th>#</th>
            <th>Название</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for status in statuses %}
            <tr>
                <td class="col-index">{{ loop.index }}</td>
                <td>{{ status.name }}</td>
                <td class="actions actions-one-line">
                    <a class="btn-adm"
                       href="{{ path('app_cms_status_update', {status: status.id}) }}">Редактировать</a>
                    <a class="btn-adm"
                       href="{{ path('app_cms_status_delete', {status: status.id}) }}">Удалить</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}