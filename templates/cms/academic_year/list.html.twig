{% extends 'cms/table.html.twig' %}

{% block table_name %}
    Academic_Years
{% endblock %}

{% block table_create_btn %}
    <a class="btn-adm" href="{{ path('app_cms_academic_year_create') }}">Добавить</a>
{% endblock %}

{% block table_content %}
    <table class="table">
        <thead>
        <tr>
            <th>#</th>
            <th>id</th>
            <th>Режим</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for academicYear in academicYears %}
            <tr>
                <td class="col-index">{{ loop.index }}</td>
                <td>{{ academicYear.id }}</td>
                <td>{{ academicYear.mode }}</td>
                <td class="actions actions-one-line">
                    <a class="btn-adm"
                       href="{{ path('app_cms_academic_year_update', {academicYear: academicYear.id}) }}">Редактировать</a>
                    <a class="btn-adm"
                       href="{{ path('app_cms_academic_year_delete', {academicYear: academicYear.id}) }}">Удалить</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
