{% extends 'cms/table.html.twig' %}

{% block table_name %}
    Student Violations
{% endblock %}

{% block table_create_btn %}
    <a class="btn-adm" href="{{ path('app_cms_student_violation_create') }}">Добавить</a>
{% endblock %}

{% block table_content %}
    <table class="table">
        <thead>
        <tr>
            <th>#</th>
            <th>id_student</th>
            <th>id_violation</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for studentViolation in studentsViolations %}
            <tr>
                <td class="col-index">{{ loop.index }}</td>
                <td>{{ studentViolation.student.fio }}</td>
                <td>{{ studentViolation.violation.name }}</td>
                <td class="actions actions-one-line">
                    <a class="btn-adm"
                       href="{{ path('app_cms_student_violation_update', {studentViolation: studentViolation.id}) }}">Редактировать</a>
                    <a class="btn-adm"
                       href="{{ path('app_cms_student_violation_delete', {studentViolation: studentViolation.id}) }}">Удалить</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}