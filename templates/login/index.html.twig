{% extends 'base.html.twig' %}

{% block body %}
    <form id="form" action="{{ path('login') }}" method="post" class="form form_auth">
        <legend>Авторизация</legend>
        <div class="form-group">
            <label for="username">Логин:</label>
            <input placeholder="Логин" type="text" name="_username" id="username" class="login input-text-field" value="{{ last_username }}">
        </div>
        <div class="form-group">
            <label for="password">Пароль:</label>
            <input placeholder="Пароль" type="password" name="_password" id="password" class="password input-text-field">
        </div>
        <div class="form-group">
            <input type="submit" class="btn_auth" name="btn" value="Войти">
        </div>

        {% if error %}
            <div style="color: darkred; font-weight: bold; text-align: center">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
    </form>
{% endblock %}
