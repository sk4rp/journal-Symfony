{% extends export|default(false) ? 'journal/form/export.html.twig' : 'journal/form/layout.html.twig' %}

{% block form %}
    <p>Список обучающихся {{ currentAcademicYear.id - group.year + 1 }} курса</p>
{% endblock %}

{% block table %}
    <div class="out-block">
        {% for student in students %}
            <div class="out-row-block">
                <p>ФИО участника: {{ student.fio }}</p>
                <p></p>
            </div>
        {% endfor %}
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}

    {% if export|default(false) %}
        <style>
            tr > :nth-child(1) {
                width: 10%;
            }

            tr > :nth-child(2) {
                width: 40%;
            }

            tr > :nth-child(3) {
                width: 50%;
            }
        </style>
    {% endif %}
{% endblock %}
